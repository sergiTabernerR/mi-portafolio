<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitxaParada">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/carreteradifuminada"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView android:id="@+id/nombreAplicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anglican_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Gestio Bus"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:background="#99000000">
         <Button
             android:id="@+id/secuenciaParada"
             android:fontFamily="@font/childhood_bold"
             android:text="Secuencia Parades"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/llocsEmblematics"
            android:fontFamily="@font/childhood_bold"
            android:text="Llocs emblemÃ tics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <Button
            android:id="@+id/mapa"
            android:fontFamily="@font/childhood_bold"
            android:text="Mapa Parada"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/parada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:layout_marginTop="110dp"
            android:background="#99000000"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/viewLinia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="#99000000"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView android:id="@+id/viewParada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="#99000000"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="#99000000"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnant"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="\u25C0"
                android:textSize="20sp"
                app:cornerRadius="28dp" />
            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:fontFamily="@font/childhood_bold"
                android:layout_height="56dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnseg"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="\u25B6"
                android:textSize="20sp"
                app:cornerRadius="28dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>