<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="1"
    android:layout_gravity="fill"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_marginStart="0dp"
    android:layout_margin="50dp"
    android:background="#94A37BD1"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
   >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        >

    <TextView
        android:id="@+id/linia"
        android:textSize="25dp"
        android:fontFamily="@font/those_glitch_regular"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:orientation="horizontal"
            />

        <TextView
            android:id="@+id/descripcio"
            android:fontFamily="@font/rising"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30dp"
            android:textSize="30dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@+id/linia"
            app:layout_constraintTop_toTopOf="@id/linia" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
