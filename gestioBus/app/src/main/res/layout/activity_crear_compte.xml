<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearCompte">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/carreteradifuminada"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:padding="2dp"
            android:text="Creacio d'Usuari"
            android:textColor="@color/white"
            android:textSize="35dp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="171dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:ems="10"
            android:background="#99999999"
            android:gravity="center"
            android:enabled="false"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:text="Usuari"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="318dp" />

        <EditText
            android:id="@+id/usuari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:ems="10"
            android:background="#99000000"
            android:gravity="center"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="318dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:ems="10"
            android:background="#99999999"
            android:gravity="center"
            android:enabled="false"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:text="Contrasenya"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="318dp" />
        <EditText
            android:id="@+id/contrasenya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:ems="10"
            android:gravity="center"
            android:background="#99000000"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:ems="10"
            android:background="#99999999"
            android:gravity="center"
            android:enabled="false"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:text="Confirmar ContraseÃ±a"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="318dp" />
        <EditText
            android:id="@+id/confirmarContrasenya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/childhood_bold"
            android:ems="10"
            android:gravity="center"
            android:background="#99000000"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/darrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/childhood_bold"
                android:text="darrera"
                android:background="#99000000"
                android:layout_margin="20dp"
                tools:layout_editor_absoluteX="96dp"
                tools:layout_editor_absoluteY="533dp" />
            <Button
                android:id="@+id/crearCompte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/childhood_bold"
                android:text="Crear Compte"
                android:layout_margin="20dp"
                android:background="#99000000"
                tools:layout_editor_absoluteX="219dp"
                tools:layout_editor_absoluteY="535dp" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/idLoadingPB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>